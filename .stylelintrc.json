{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier", "stylelint-config-clean-order"],
  "overrides": [
    {
      "files": ["**/*.tsx", "**/*.style.ts"],
      "customSyntax": "postcss-styled-syntax",
      "rules": {
        "at-rule-no-unknown": null
      }
    }
  ],
  "ignoreFiles": [".yarn/**/*", ".next/**/*", "node_modules/**/*"]
}
